{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "namePrefix": {
        "type": "string",
        "defaultValue": "calebresume"
      },
      "environment": {
        "type": "string",
        "defaultValue": "dev"
      },
      "storageAccountName": {
        "type": "string",
        "defaultValue": "[toLower(concat(parameters('namePrefix'), parameters('environment'), 'stg'))]"
      },
      "cosmosAccountName": {
        "type": "string",
        "defaultValue": "[toLower(concat(parameters('namePrefix'), parameters('environment'), 'cosmos'))]"
      },
      "functionAppName": {
        "type": "string",
        "defaultValue": "[toLower(concat('fa-', parameters('namePrefix'), '-', parameters('environment'), '-linux'))]"
      },
      "tableName": {
        "type": "string",
        "defaultValue": "VisitorCounter"
      }
    },
    "variables": {
      "appServicePlanName": "[toLower(concat(parameters('namePrefix'), '-', parameters('environment'), '-plan-linux'))]"
    },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2023-01-01",
        "name": "[parameters('storageAccountName')]",
        "location": "[parameters('location')]",
        "sku": { "name": "Standard_LRS" },
        "kind": "StorageV2"
      },
      {
        "type": "Microsoft.DocumentDB/databaseAccounts",
        "apiVersion": "2023-04-15",
        "name": "[parameters('cosmosAccountName')]",
        "location": "[parameters('location')]",
        "kind": "GlobalDocumentDB",
        "properties": {
          "capabilities": [ { "name": "EnableTable" } ],
          "databaseAccountOfferType": "Standard",
          "locations": [ { "locationName": "[parameters('location')]", "failoverPriority": 0 } ],
          "consistencyPolicy": { "defaultConsistencyLevel": "Session" }
        }
      },
      {
        "type": "Microsoft.DocumentDB/databaseAccounts/tables",
        "apiVersion": "2023-04-15",
        "name": "[format('{0}/{1}', parameters('cosmosAccountName'), parameters('tableName'))]",
        "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosAccountName'))]" ],
        "properties": { "resource": { "id": "[parameters('tableName')]" } }
      },
      {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2023-01-01",
        "name": "[variables('appServicePlanName')]",
        "location": "[parameters('location')]",
        "sku": { "name": "Y1", "tier": "Dynamic" },
        "properties": {
          "reserved": true
        }
      },
      {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2023-01-01",
        "name": "[parameters('functionAppName')]",
        "location": "[parameters('location')]",
        "kind": "functionapp,linux",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
          "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
          "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosAccountName'))]"
        ],
        "properties": {
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
          "siteConfig": {
            "linuxFxVersion": "Python|3.11",
            "appSettings": [
              {
                "name": "AzureWebJobsStorage",
                "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', parameters('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-01-01').keys[0].value)]"
              },
              { "name": "FUNCTIONS_EXTENSION_VERSION", "value": "~4" },
              { "name": "FUNCTIONS_WORKER_RUNTIME", "value": "python" },
              { "name": "WEBSITE_RUN_FROM_PACKAGE", "value": "1" },
              { "name": "COSMOS_TABLE_NAME", "value": "[parameters('tableName')]" },
              { "name": "COSMOS_PARTITION_KEY", "value": "counter" },
              { "name": "COSMOS_ROW_KEY", "value": "global" }
            ]
          }
        }
      }
    ],
    "outputs": {
      "functionAppName": { "type": "string", "value": "[parameters('functionAppName')]" },
      "cosmosAccountName": { "type": "string", "value": "[parameters('cosmosAccountName')]" },
      "storageAccountName": { "type": "string", "value": "[parameters('storageAccountName')]" }
    }
  }