{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Python Functions",
      "type": "python",
      "request": "launch",
      "program": "${config:azureFunctions.pythonVenv}/bin/func",
      "args": [
        "host",
        "start",
        "--pause-on-error"
      ],
      "console": "integratedTerminal",
      "env": {
        "AzureWebJobsStorage": "<Your_Storage_Connection_String>",
        "FUNCTIONS_WORKER_RUNTIME": "python",
        "FUNCTIONS_EXTENSION_VERSION": "~4"
      }
    }
  ]
}
